{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
